<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xmlns:security="http://www.springframework.org/schema/security"
		xsi:schemaLocation="http://www.springframework.org/schema/beans 
			http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
			http://www.springframework.org/schema/context
           	http://www.springframework.org/schema/context/spring-context-3.2.xsd
           	http://www.springframework.org/schema/security
          	http://www.springframework.org/schema/security/spring-security-3.1.xsd">
           	
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" >
        <property name="locations">
	        <list>
	            <value>classpath:properties/persistence.properties</value>
	        </list>
	    </property>
    </bean>
    
    <import resource="classpath:config/hibernate-config.xml" />
    <import resource="classpath:config/beans.xml" />
    <!-- 
    <import resource="classpath:spring/security/security.xml" /> -->
</beans>
